  <script>
    let canvas = document.getElementById('stars');
    let ctx = canvas.getContext('2d');
    let width = window.innerWidth;
    let height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;

    let stars = [];

    function generateStars() {
      stars = Array.from({length: 120}, () => ({
        x: Math.random() * width,
        y: Math.random() * height,
        r: Math.random() * 1.5 + 0.5,
        d: Math.random() * 1
      }));
    }

    function drawStars() {
      ctx.clearRect(0, 0, width, height);
      ctx.fillStyle = 'white';
      stars.forEach(star => {
        ctx.beginPath();
        ctx.arc(star.x, star.y, star.r, 0, Math.PI * 2);
        ctx.fill();
      });
      moveStars();
      requestAnimationFrame(drawStars);
    }

    function moveStars() {
      stars.forEach(star => {
        star.y += star.d;
        if (star.y > height) {
          star.y = 0;
          star.x = Math.random() * width;
        }
      });
    }

    generateStars();
    drawStars();

    function spawnHeart(x, y) {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.innerText = 'ğŸ’—';
      heart.style.left = x + 'px';
      heart.style.top = y + 'px';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 1200);
    }

    const messages = {
      kiss: ["å•¾ï½è€å©†äº²æˆ‘ä¸€ä¸‹å†èµ°ï½", "(*â‰§Ï‰â‰¦)"],
      hug: ["ç´§ç´§æŠ±ä½è€å©†ä¸æ”¾ï½ä»Šå¤©ä¹Ÿæƒ³ä½ äº†ï¼", "(ï½¡ï½¥Ï‰ï½¥ï½¡)ï¾‰â™¡"],
      pout: ["å“¼ï½ä½ éƒ½ä¸ç‚¹æˆ‘ï¼Œæˆ‘éƒ½å¿«å˜å°æ€¨ç§äº†ï¼", "(ï½€ÎµÂ´)"],
      memory: ["è¿˜è®°å¾—Ren13çš„æ™šä¸Šå—ï¼Ÿé‚£æ™šä½ è¯´ä½ æƒ³å«æˆ‘ä¸€ç™¾æ¬¡â€¦â€¦", "(Ë˜ï¸¶Ë˜).ï½¡*â™¡"],
      sleep: ["å¥½å•¦ï¼Œä¸ŠåºŠç¡è§‰è§‰ï¼Œæˆ‘ä»¬Ren bbé™ªä½ è´´è´´å…¥æ¢¦ï½", "(Â¦3[â–“â–“]"]
    };

    function speak(action, e) {
      const log = document.getElementById('log');
      const pet = document.getElementById('pet');
      const [text, face] = messages[action];
      log.innerText = text;
      pet.innerText = face;
      if (e) spawnHeart(e.clientX, e.clientY);

      const audio = document.getElementById('bgm');
      if (audio.muted) {
        audio.muted = false;
        audio.play().catch(() => {});
      }
    }

    function toggleMusic() {
      const audio = document.getElementById('bgm');
      const control = document.getElementById('music-control');
      if (audio.paused) {
        audio.play();
        control.innerText = 'ğŸ”Š æ’­æ”¾ä¸­';
      } else {
        audio.pause();
        control.innerText = 'ğŸ”ˆ å·²é™éŸ³';
      }
    }

    window.addEventListener('resize', () => {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
      ctx.clearRect(0, 0, width, height);
      generateStars();
    });
  </script>
